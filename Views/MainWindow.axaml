<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="MyAvaloniaApp.MainWindow"
        Title="Data Storage"
        Width="400" Height="200">
    <StackPanel Margin="10">
        <TextBlock Text="Введіть дані для збереження:" FontSize="16"/>
        <TextBox x:Name="InputTextBox" Width="300" Margin="0,10,0,10"/>
        
        <Button Content="Зберегти дані" Width="150" Click="SaveData_Click"/>
        <Button Content="Завантажити дані" Width="150" Margin="0,10,0,10" Click="LoadData_Click"/>

        <TextBlock Text="Збережені дані:" FontSize="16"/>
        <TextBlock x:Name="SavedDataTextBlock" FontSize="14" Foreground="Gray"/>
    </StackPanel>
</Window>